<Window x:Class="WPFApp1.QuanLySinhVien"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:WPFApp1"
        mc:Ignorable="d"
        Title="QuanLySinhVien" Height="700" Width="700">
    <Grid>
        <Menu DockPanel.Dock="Top" 
              FontFamily="Consolas" 
              FontSize="13" 
              FontWeight="Bold" 
              HorizontalAlignment="left" 
              VerticalAlignment="top" 
              Margin="10 10 0 0">
            <MenuItem Header="Hệ thống"/>
            <MenuItem Header="Quản lý"/>
            <MenuItem Header="Cài đặt"/>
        </Menu>
        <Label Content="QUẢN LÝ SINH VIÊN" 
               FontFamily="Consolas"
               FontSize="18" 
               FontWeight="Bold" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top"
                Margin="0 30 0 0"/>
        <GroupBox Header="Thông tin sinh viên" 
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Bottom" 
                  Margin="10 0 0 100"
                  FontFamily="Consolas"
                  FontSize="16" 
                  FontWeight="Bold" 
                  Width="330"
                  Height="500">
            <StackPanel >
                <Label Content="Mã SV: " />
                <TextBox Background="LightBlue" 
                         Width="200" 
                         HorizontalAlignment="Left"/>
                <Label Content="Họ tên: " />
                <TextBox Background="LightBlue" 
                         Width="200" 
                         HorizontalAlignment="Left"/>
                <Label Content="Giới tính"/>
                <RadioButton Content="Nam" 
                             GroupName="GioiTinh" />
                <RadioButton Content="Nữ" 
                             GroupName="GioiTinh" />
                <RadioButton Content="Khác"
                             GroupName="GioiTinh" />
                <Label Content="Ngày sinh"/>
                <DatePicker SelectedDate="{x:Static sys:DateTime.Now}"
                            HorizontalAlignment="Left"/>
                <Label Content="Địa chỉ"/>
                <TextBox Width="300" Height="55"/>
                <Label Content="Dân tộc"/>
                <ComboBox Background="LightBlue" 
                          Width="200"
                          HorizontalAlignment="Left">
                    <ComboBoxItem Content="Kinh"/>
                    <ComboBoxItem Content="Tày"/>
                    <ComboBoxItem Content="Thái"/>                    
                    <ComboBoxItem Content="Khác"/>
                </ComboBox>
                <Label Content="Tôn giáo"/>                
                <CheckBox Content="Phật Giáo" FontWeight="Normal" />
                <CheckBox Content="Thiên Chúa" FontWeight="Normal"/>
                <CheckBox Content="Tin Lành" FontWeight="Normal"/>
                <CheckBox Content="Hồi Giáo" FontWeight="Normal"/>
            </StackPanel>
                        
        </GroupBox>
        <StackPanel HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Margin="350 0 0 30"
                    Width="330"
                    Height="550">
            <Image Source="Images/CoVietNam.png" Height="100"/>
            <Label Content="Trường:" FontFamily="Consolas" FontSize="16" FontWeight="Bold"/>
            <TextBox Background="LightBlue" 
                     Width="200" 
                     HorizontalAlignment="Left"/>
            <Label Content="Lớp: " 
                   FontFamily="Consolas" 
                   FontSize="16" 
                   FontWeight="Bold"  />
            <TextBox Background="LightBlue" 
                     Width="200" 
                     HorizontalAlignment="Left"/>
            <Label Content="Khoa: " 
                   FontFamily="Consolas" 
                   FontSize="16" 
                   FontWeight="Bold"/>
            <TextBox Background="LightBlue" 
                     Width="200" 
                     HorizontalAlignment="Left"/>
            <Label Content="Ngành học: " 
                   FontFamily="Consolas" 
                   FontSize="16" 
                   FontWeight="Bold"/>
            <TextBox Background="LightBlue" 
                     Width="200" 
                     HorizontalAlignment="Left"/>
            <Label Content="Ngoại ngữ"
                   FontFamily="Consolas" 
                   FontSize="16" 
                   FontWeight="Bold"/>
            <ListBox HorizontalAlignment="Left">
                <ListBoxItem Content="Tiếng Anh"/>
                <ListBoxItem Content="Tiếng Pháp"/>
            </ListBox>
            <Label Content="Số điện thoại"
                     FontFamily="Consolas" 
                     FontSize="16" 
                     FontWeight="Bold"/>
            <TextBox Background="LightBlue"
                        Width="200" 
                        HorizontalAlignment="Left"/>
            <Label Content="Email"
                     FontFamily="Consolas" 
                     FontSize="16" 
                     FontWeight="Bold"/>
            <TextBox Background="LightBlue"
                        Width="200" 
                        HorizontalAlignment="Left"/>

        </StackPanel>
        <Button Content="Thoát" 
                Width="100" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                Margin="0 0 0 50"
                Background="DarkBlue" 
                Foreground="White" 
                FontFamily="Consolas" 
                FontSize="16" 
                FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="0 0 0 20"
                   FontSize="13"
                   FontFamily="Consolas">
            <Hyperlink NavigateUri="https://kcntt.duytan.edu.vn/" 
           RequestNavigate="Hyperlink_RequestNavigate">
            https://kcntt.duytan.edu.vn
        </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
